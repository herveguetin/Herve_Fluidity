/**
 * Category layered navigation state
 *
 * @see Mage_Catalog_Block_Layer_State
 */
?>
<?php $_filters = $this->getActiveFilters() ?>
<?php if(!empty($_filters)): ?>
<div class="currently">
    <h4><small><?php echo $this->__('Currently Shopping by:') ?></small></h4>
    <hr/>
    <ol>
    <?php foreach ($_filters as $_filter): ?>
        <li>
            <div class="row collapse">
                <div class="small-9 columns">
                    <span class="label"><?php echo $this->__($_filter->getName()) ?></span>
                </div>
                <div class="small-3 columns">
                    <a href="<?php echo $_filter->getRemoveUrl() ?>" class="tiny secondary button postfix" title="<?php echo $this->__('Clear') ?>"><?php echo $this->__('Clear') ?></a>
                </div>
            </div>
            <div class="row">
                <div class="small-12 columns">
                    <span class="value"><?php echo $this->stripTags($_filter->getLabel()) ?></span>
                    <div class="right">
                        <?php
                        $clearLinkUrl = $_filter->getClearLinkUrl();
                        if ($clearLinkUrl):
                            ?>
                            <button class="button tiny" onclick="setLocation('<?php echo $_filter->getRemoveUrl() ?>')"><?php echo $this->__('Previous') ?></button>
                            <button class="button tiny" onclick="setLocation('<?php echo $clearLinkUrl ?>')"><?php echo $this->escapeHtml($_filter->getFilter()->getClearLinkText()) ?></button>
                        <?php endif; ?>
                    </div>
                </div>
            </div>

        </li>
    <?php endforeach; ?>
    </ol>
</div>
<?php endif; ?>
